{% extends 'layout.twig' %}

{% trans_default_domain 'silex_user' %}

{% block title %}{{ parent() }} - {{ 'registration.title'|trans }}{% endblock %}

{% block body %}

{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.password) }}
    {{ form_row(form.plainPassword.confirm_password) }}

    {{ form_rest(form) }}
    <input type="submit">
{{ form_end(form) }}

{% endblock %}
