{% extends 'layout.twig' %}

{% block title %}{{ parent() }} - {{ 'silex_user.registration.title'|trans }}{% endblock %}

{% block body %}

{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password.password) }}
    {{ form_row(form.password.confirm_password) }}

    {{ form_rest(form) }}
    <input type="submit">
{{ form_end(form) }}

{% endblock %}
